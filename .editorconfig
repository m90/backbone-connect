# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# tab indentation for js, json and less
[*.js, *.less, *.json]
indent_style = tab

# 2 space indentation for jade template files
[*.jade]
indent_style = space
indent_size = 2

# 2 space indentation for yml (docker config) files
[*.yml]
indent_style = space
indent_size = 2

# npm style indent for package.json
[package.json]
indent_style = space
indent_size = 2
